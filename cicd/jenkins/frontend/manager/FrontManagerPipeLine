pipeline {
    agent any

    environment {
        // Docker Hub 아이디와 비밀번호 설정
        dockerhubid = ''
        dockerhubpw = ''
    }

    stages {
        stage('git clone') {
            steps {
                script {
                    try {
                        git branch: 'develop_manager',
                            credentialsId: 'github_access_token',
                            url: 'https://github.com/beyond-sw-camp/be02-fin-Surisuri_Masuri-OMS.git'
                            currentBuild.result = 'SUCCESS'
                    } catch (Exception e) {
                        echo "Git clone failed: ${e.message}"
                        currentBuild.result = 'FAILURE'
                    }
                }
            }
        }
        stage('Install Dependencies') {
            when {
                expression { currentBuild.result == 'SUCCESS' }
            }
            steps {
                script {
                    try {
                        dir('frontend/manager/') {
                            sh 'pwd'
                            sh 'ls -al'
                            sh 'rm -rf dist/'
                            sh 'npm install'
                        }
                        currentBuild.result = 'SUCCESS'
                    } catch (Exception e) {
                        echo "Build failed: ${e.message}"
                        currentBuild.result = 'FAILURE'
                    }
                }
            }
        }
        stage('test') {
            when {
                expression { currentBuild.result == 'SUCCESS' }
            }
            steps {
                script {
                    try {
                        dir('frontend/manager/') {
                            sh 'pwd'
                            sh 'npm run test'
                        }
                        currentBuild.result = 'SUCCESS'
                    } catch (Exception e) {
                        echo "Test failed: ${e.message}"
                        currentBuild.result = 'FAILURE'
                    }
                }
            }
        }
        stage('Build') {
            steps {
                script {
                    try {
                        dir('frontend/manager/') {
                            sh 'pwd'
                            sh 'npm run build'
                        }
                        currentBuild.result = 'SUCCESS'
                    } catch (Exception e) {
                        echo "Build failed: ${e.message}"
                        currentBuild.result = 'FAILURE'
                    }
                }
            }
        }
        stage('Docker Build') {
            when {
                expression { currentBuild.result == 'SUCCESS' }
            }
            steps {
                script {
                    try {
                        sh 'pwd'
                        sh 'docker build -t beomiya/final_manager_frontend:1.${BUILD_ID} .'
                        currentBuild.result = 'SUCCESS'
                    } catch (Exception e) {
                        echo "Build failed: ${e.message}"
                        currentBuild.result = 'FAILURE'
                    }
                }
            }
        }
        stage('Docker Push') {
            when {
                expression { currentBuild.result == 'SUCCESS' }
            }
            steps {
                script {
                    try {
                    // Docker 이미지를 Docker Hub에 푸시
                        sh "docker login -u $dockerhubid -p $dockerhubpw"
                        sh "docker push beomiya/final_manager_frontend:1.${BUILD_ID}"
                        currentBuild.result = 'SUCCESS'
                    } catch (Exception e) {
                        echo "Docker build failed: ${e.message}"
                        currentBuild.result = 'FAILURE'
                    }
                }
            }
        }
        stage('SSH Transfer and Kubernetes Deployment') {
            when {
                expression { currentBuild.result == 'SUCCESS' }
            }
            steps {
                script {
                    sshPublisher(
                        continueOnError: false,
                        failOnError: true,
                        publishers: [
                            sshPublisherDesc(
                                configName: 'K8S',
                                verbose: true,
                                transfers: [
                                    sshTransfer(
                                        sourceFiles: 'cicd/k8s/frontend/manager/frontendmanager-deployment.yml',
                                        remoteDirectory: '/root',
                                        execCommand: 'sed -i "s/VERSION/$BUILD_NUMBER/g" /root/cicd/k8s/frontend/manager/frontendmanager-deployment.yml'
                                    ),
                                    sshTransfer(
                                        execCommand: 'kubectl apply -f /root/cicd/k8s/frontend/manager/frontendmanager-deployment.yml'
                                    )
                                ]
                            )
                        ]
                    )
                }
            }
        }
    }
}